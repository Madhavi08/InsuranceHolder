<%- include('./partials/header.ejs') %>

<main>
    <div class="blurred mb-5">
        <div class="container">
            <nav class="d-flex justify-content-between align-items-center p-3">
                <h2 class="display-6 fw-bold text-white"><a href="/"
                        class="text-decoration-none display-6 fw-bold text-white">PolicyGrab</a></h2>
                <ul class="m-0 list-unstyled">
                    <li><a href="/register" class="text-decoration-none lead text-danger fw-normal">Register</a></li>
                </ul>
            </nav>
        </div>
    </div>

    <section class="mt-5 pt-5">
        <div class="container">
            <div class="row justify-content-end align-items-center">
                <div class="col-4 d-flex align-items-center flex-wrap">
                    <div class=" formdiv d-flex justify-content-center align-items-center flex-wrap" id="">
                        <!-- <div class="w-100 mb-5"> -->
                        <h2 class="fw-light pt-4 pb-2 border-2 border-bottom border-danger d-inline-block">Login
                            Details</h2>
                        <!-- </div> -->
                        <form action="/login" method="post"
                            class="d-flex justify-content-center flex-wrap align-items-center p-3 py-5">
                            <div class="d-flex align-items-center mb-4">
                                <label for="emailofcustomer" class="m-0 form-label">Email: </label>
                                <div class="input-group has-validation mx-2" required>
                                    <span class="input-group-text" id="inputGroupPrepend">@</span>
                                    <input type="email" class="form-control" id="emailofcustomer"
                                        aria-describedby="inputGroupPrepend" required>
                                    <div class="invalid-feedback">
                                        Please choose an email.
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex align-items-center mb-4">
                                <label for="passwordofcustomer" class="m-0 form-label">Password: </label>
                                <input type="password" name="passwordofcustomer" id="passwordofcustomer"
                                    class="form-control w-auto mx-2" required>
                            </div>
                            <input type="submit" value="Login" class="btn btn-warning">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>


<%- include('./partials/footer.ejs') %>